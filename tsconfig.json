{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "target": "es2018",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": ["@nuxt/types"]
  },
  "exclude": ["node_modules", "lib", "test"]
}
